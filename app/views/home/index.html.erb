<div class="page-header">
  <h1>Produtos com estoque baixo</h1>
</div>

<% if @produtos.count > 0 %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Quantidade</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @produtos) do |produto| %>
        <td style="color: red"><%= produto.nome %></td>
        <td style="color: red"><%= produto.quantidade %></td>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <h2>Nenhum produto com estoque baixo, bora vender !!!</h2>
<% end %>
